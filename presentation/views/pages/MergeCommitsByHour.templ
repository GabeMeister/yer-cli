package pages

import (
	"GabeMeister/yer-cli/analyzer"
	"GabeMeister/yer-cli/presentation/helpers"
	"GabeMeister/yer-cli/presentation/views/components"
)

func getMergeCommitsByHourData(multiRepoRecap analyzer.MultiRepoRecap) map[string]interface{} {
	result := helpers.ChartJSBarChartData{
		YAxisLabel: "Merges",
		XAxisLabel: "Hour",
		Dataset:    []helpers.BarChartItem{},
	}
	hours := helpers.GetHoursOfDay()

	for idx, commits := range multiRepoRecap.MergeCommitsByHour {
		hour := hours[idx]
		result.Dataset = append(result.Dataset, helpers.BarChartItem{
			Name:  hour,
			Value: commits,
		})
	}

	return helpers.GetBarChartData(result, helpers.BarChartOptions{
		Sort: false,
	})
}

templ MergeCommitsByHour(multiRepoRecap analyzer.MultiRepoRecap) {
	@components.Slide() {
		@components.Title() {
			Merges by Hour
		}
		<div
			class="chart-js-container"
			data-grouped-bar-chart-data={ helpers.Json(getMergeCommitsByHourData(multiRepoRecap)) }
		>
			<canvas id="grouped-bar-chart-canvas"></canvas>
		</div>
		@components.NextButton(helpers.GetMultiRepoNextButtonLink("/merge-commits-by-hour", multiRepoRecap))
	}
}
